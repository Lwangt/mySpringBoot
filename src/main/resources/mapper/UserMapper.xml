<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="my.mapper.UserMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="userResult" type="my.entity.User">
        <id column="id" property="id" />
        <result column="name" property="name" />
        <result column="password" property="password" />
        <result column="avatar_url" property="avatarUrl" />
        <result column="create_time" property="createTime" />
        <result column="sex" property="sex" />
        <result column="follow_account" property="followAccount" />
        <result column="fan_account" property="fanAccount" />
        <result column="user_img" property="userImg" />
    </resultMap>

    <!--public User selectUserByName(String name);/*通过用户名查询用户*/-->
    <select id="selectUserByName" resultMap="userResult" parameterType="String">
        SELECT * FROM USER WHERE NAME = #{name}
    </select>

</mapper>
